
<p class="notice"><%= flash[:notice] %></p>

<h1>Books</h1>

<table>

<thead>
<tr>
  <th><h4>Title</h4></th>
  <th><h4>Body</h4></th>
  <th colspan="3"></th>
</tr>
</thead>

<% @books.each do |book| %>

<tbody>
<tr>
  <th><span><%= book.title %></span></th>
  <th><span><%= book.body %></span></th>

  <th><%= link_to "Show", book_path(book.id) %></th>
  <th><%= link_to "Edit", edit_book_path(book.id) %></th>
  <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></th>
</tr>
</tbody>

<% end %>

</table>



<h2>New book</h2>

<% if @book.errors.any? %>
  <h4>error</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>





<%= form_with model: @book, url:'/books', method: :post do |f| %>

  <div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>

<% end %>